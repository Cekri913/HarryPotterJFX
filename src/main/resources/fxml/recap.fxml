<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" minHeight="400.0" minWidth="600.0" prefHeight="700.0" prefWidth="900.0" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chris.acolatse.harrypotterJFX.controller.RecapController">
    <Label fx:id="title" alignment="CENTER" text="READY FOR THE JOURNEY ?" textFill="white">
      <font>
         <Font size="27.0" />
      </font></Label>
    <Label fx:id="resumeLabel" prefHeight="400.0" prefWidth="800.0" text="" textFill="WHITE" textOverrun="CENTER_WORD_ELLIPSIS">
      <font>
         <Font name="Arial Black" size="20.0" />
      </font></Label>
    <HBox alignment="BOTTOM_CENTER" spacing="30.0">
        <Button fx:id="back" onAction="#backToPetStep" text="BACK" />
        <Button onAction="#Play" prefHeight="40.0" prefWidth="56.0" text="GO!" />
        <VBox.margin>
            <Insets left="10.0" right="10.0" top="50.0" />
        </VBox.margin>
    </HBox>
   <HBox alignment="BOTTOM_CENTER" spacing="30.0">
      <children>
         <Button onAction="#exitGame" text="QUIT">
            <HBox.margin>
               <Insets bottom="10.0" />
            </HBox.margin></Button>
      </children>
   </HBox>

    <stylesheets>
        <URL value="@../css/Main.css" />
        <URL value="@../css/Back.css" />
    </stylesheets>
</VBox>

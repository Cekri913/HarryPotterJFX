<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="petlayout" alignment="CENTER" minHeight="400.0" minWidth="600.0" spacing="30.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chris.acolatse.harrypotterJFX.controller.PetController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <stylesheets>
        <URL value="@../css/Back.css" />
        <URL value="@../css/Main.css" />
    </stylesheets>
    <Label fx:id="nameLabel" textFill="white" />

    <HBox alignment="CENTER" spacing="10.0">
    <Label text="Please choose a pet :" textFill="WHITE">
         <font>
            <Font size="24.0" />
         </font></Label>
    <ChoiceBox fx:id="petChoice" layoutX="50.0" layoutY="50.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    </ChoiceBox>
    </HBox>
    <HBox alignment="CENTER" spacing="30.0">

    <Button fx:id="petBackButton" alignment="CENTER" cancelButton="true" onAction="#backToCoreStep" prefHeight="26.0" prefWidth="67.0" text="BACK" textFill="#302c2c" />
        <Button fx:id="petNextButton" onAction="#showRecap" text="NEXT" />
      <VBox.margin>
         <Insets top="100.0" />
      </VBox.margin>
    </HBox>

</VBox>
